    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: setup.py develop",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/setup.py",
            "args": [
                "develop"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: unittests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/test_vulkanmitts.py",
            "args": [
                "TestRenderCube"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            },
            "justMyCode":false
        },
        {
            "name": "Python: genswigi",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/genswigi.py",
            "args": [
                "../Vulkan-Docs/xml/vk.xml",
                "."
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "c:/dev/Vulkan-Docs/scripts"
            },
            "justMyCode":false
        }
    ]
}